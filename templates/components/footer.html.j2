<!-- Hero footer: will stick at the bottom -->
<div class="hero-foot">
    <footer class="footer">
        <div class="tile is-ancestor is-vcentered ml-6">
        <!-- SEO Section -->
        <div class="tile is-4">
            <h4>
            {% for job in footer.jobs -%}
                <strong>{{ job }}</strong>{% if loop.revindex0 == 1 %} und {% elif not loop.last %}, {% endif %}
            {%- endfor %}
            in <strong>{{ footer.city }}</strong> {% if footer.city_nearby is defined %} bei <strong>{{ footer.city_nearby }}</strong> {% endif %} im wundersch√∂nen <strong>{{ footer.canton }} / {{ footer.country }}</strong> 
            durch <strong>{{ footer.first_name }} {{ footer.last_name }}</strong>.
        </h4>
      </div>
      
      <!-- Spacer -->
      <div class="tile is-4"><br></div>
      
      <!-- Links -->
      <div class="tile is-4 is-vertical">
        <a href="{{ static_url(dir=urls.dir, file=urls.impressum) }}" class="hyperlink">Impressum</a><br>
        <a href="{{ static_url(dir=urls.dir, file=urls.dsb) }}" class="hyperlink">Datenschutzbestimmungen</a>
      </div>
    </div>
  </footer>
</div>