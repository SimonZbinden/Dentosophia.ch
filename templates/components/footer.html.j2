        <!-- SEO Section -->
        <div class="tile is-4">
            <h4>
            {% for job in jobs %}
                <strong>{{ job }}</strong>{% if not loop.last %}, {% else %} und {% endif %}
            {% endfor %}
            in <strong>{{ city }}</strong> {% if nearby_city %} bei <strong>{{ nearby_city }}</strong> {% endif %} im wundersch√∂nen 
            <strong>{{ canton }} / {{ country }}</strong> durch <strong>{{ first_name }} {{ last_name }}</strong>.
        </h4>
