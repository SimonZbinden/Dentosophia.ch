<footer class="footer">
  <div class="columns is-vcentered">
    <!-- Left-aligned content -->
    <div class="column is-7 has-text-centered">
      {% for job in personal.jobs -%}
      <strong>{{ job }}</strong>{% if loop.revindex0 == 1 %} und {% elif not loop.last %}, {% endif %}
      {%- endfor %}
      <br>in <strong>{{ personal.city }}</strong> {% if personal.city_nearby is defined %} bei <strong>{{
        personal.city_nearby }}</strong> {% endif %} im wundersch√∂nen <strong>{{ personal.canton }} / {{
        personal.country }}</strong>
      <br>durch <strong>{{ personal.first_name }} {{ personal.last_name }}</strong>.
    </div>

    <!-- Right-aligned links -->
    <div class="column has-text-right is-4-tablet">
      <div class="is-inline-block">
        <a href="{{ static_url(dir=links.dir, file=links.impressum) }}" class="hyperlink has-text-link" {% if
          this_site.name=='impressum' %}>
          <strong {% endif %}>Impressum{% if this_site.name=='impressum' %}</strong>{% endif %}
        </a>
        <br>
        <a href="{{ static_url(dir=links.dir, file=links.dsb) }}" class="hyperlink has-text-link" {% if this_site.name=='dsb' %}>
          <strong {% endif %}>Datenschutzbestimmungen{% if this_site.name=='dsb' %}</strong>{% endif %}
        </a>
      </div>
    </div>
  </div>
</footer>