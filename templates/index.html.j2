{% extends "base.html.j2" %}

{% block title %}Your Page Title - Index{% endblock %}

{% block content %}
    <!-- Hero content: will be in the middle -->
    <div {% if content_class is defined %} class="{{ content_class }}" {% endif %}>
      <!-- Background image --> 
      {% if background_img is defined -%}
      <img
        alt="{{ background_img.alt }}"
        class="{{ background_img.class }}"
        src="{{ static_url(dir=background_img.dir, file=background_img.file) }}"
      />
      {% endif %}
      <!-- Content: shares background above -->
      <div class="content-block">
      <!-- h1 Title - only one per side for SEO -->
      {% if h1_title is defined -%}
      <h1 class="title">
        {{ h1_title }}
      </h1>
      {%- endif %}

      {%- for item in body -%}
          {% if item.subtitle %}
            <h2 class="subtitle">{{ item.subtitle }}</h2>
          {% endif %}
          {% if item.text %}
            <p>{{ item.text }}</p>
          {% endif %}
      {% endfor %}
      </div>
    </div>
{% endblock %}