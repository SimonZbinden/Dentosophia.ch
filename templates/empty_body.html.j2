{% extends "base.html.j2" %}

{% block content %}
<section class="section">
    <div class="container">
        <h1 class="title">{{ content.main_title }}</h1>
        
        <!-- Row 1: Text left (2/3), Image right (1/3) -->
        <div class="columns is-vcentered">
            <div class="column is-two-thirds">
                <h2 class="subtitle">{{ content.subtitle_1 }}</h2>
                <p>{{ content.text_1 }}</p>
            </div>
            <div class="column">
                <figure class="image">
                    <img src="{{ static_url(dir="../assets", file=dh_pic_1.png) }}" alt="">
                </figure>
            </div>
        </div>

        <!-- Row 2: Image left (1/3), Text right (2/3) -->
        <div class="columns is-vcentered">
            <div class="column is-one-third">
                <figure class="image">
                    <img src="{{ static_url(dir="../assets", file=dh_pic_1.png) }}" alt="">
                </figure>
            </div>
            <div class="column is-two-thirds">
                <h2 class="subtitle">{{ content.subtitle_2 }}</h2>
                <p>{{ content.text_2 }}</p>
            </div>
        </div>
    </div>
</section>
